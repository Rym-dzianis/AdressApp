<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="400.0" prefWidth="750.0" stylesheets="@../css/MyTheme.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.makery.address.view.RootLayoutController">
	<top>
		<MenuBar BorderPane.alignment="CENTER">
			<menus>
				<Menu mnemonicParsing="false" text="Файл">
					<items>
						<MenuItem mnemonicParsing="false" onAction="#handleNew" text="Новый" />
                  <MenuItem mnemonicParsing="false" onAction="#handleOpen" text="Открыть" />
                  <MenuItem mnemonicParsing="false" onAction="#handleSave" text="Сохранить" />
                  <MenuItem mnemonicParsing="false" onAction="#handleSaveAs" text="Сохранить как..." />
                  <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Выход" />
					</items>
				</Menu>
				<Menu mnemonicParsing="false" text="Редактировать">
					<items>
						<MenuItem mnemonicParsing="false" onAction="#handleDeletePerson" text="Удалить" />
                  <MenuItem mnemonicParsing="false" onAction="#handleEditPerson" text="Изменить" />
					</items>
				</Menu>
            <Menu mnemonicParsing="false" text="Статискика">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#handleShowBirthdayStatistics" text="Показать статистику" />
              </items>
            </Menu>
				<Menu mnemonicParsing="false" text="Помощь">
					<items>
						<MenuItem mnemonicParsing="false" onAction="#handleAbout" text="О программе" />
                  <MenuItem mnemonicParsing="false" onAction="#handleFAQ" text="Инструкция" />
					</items>
				</Menu>
			</menus>
		</MenuBar>
	</top>
</BorderPane>
